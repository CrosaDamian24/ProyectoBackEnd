<div>
  <table>
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Disponibilidad</th>
        <th>Stock</th>
        <th>Categoría</th>
        <th>Fotografía</th>
        <th>Comprar</th>
      </tr>
    </thead>
    <tbody>
      {{#each products.docs}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>{{this.price}}</td>
          <td>{{this.status}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
          <td>{{this.thumbnails}}</td>
          <td><button
              class="btn btn-success"
              onclick="addLink(`{{this._id}}`)"
            >Add</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <div>
    <br />
    {{#if products.hasPrevPage}}
      <a href="{{products.prevLink}}">Anterior</a>
    {{/if}}

    {{#if products.hasNextPage}}
      <a href="{{products.nextLink}}">Siguiente</a>
    {{/if}}

    {{#if products.page}}

      <a>{{products.page}}</a>
    {{/if}}

  </div>

</div>
<script src="/js/addLink.js"></script>